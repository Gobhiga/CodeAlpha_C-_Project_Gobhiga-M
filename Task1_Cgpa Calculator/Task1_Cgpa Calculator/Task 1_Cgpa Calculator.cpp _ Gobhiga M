#include <iostream>
using namespace std;

int main() {
    int courses;
    cout << "Enter number of courses: ";
    cin >> courses;

    float grade, credit, totalCredits = 0, totalGradePoints = 0;

    for (int i = 1; i <= courses; i++) {
        cout << "\nCourse " << i << " Grade (0–10): ";
        cin >> grade;
        cout << "Course " << i << " Credit Hours: ";
        cin >> credit;

        totalCredits += credit;
        totalGradePoints += grade * credit;
    }

    float gpa = totalGradePoints / totalCredits;

    cout << "\n-----------------------------";
    cout << "\nTotal Credits: " << totalCredits;
    cout << "\nTotal Grade Points: " << totalGradePoints;
    cout << "\nYour GPA / CGPA = " << gpa;
    cout << "\n-----------------------------\n";

    return 0;
}
Output
Enter number of courses: 3
                                          
Course 1 Grade (0–10): 8
Course 1 Credit Hours: 3

Course 2 Grade (0–10): 9
Course 2 Credit Hours: 4

Course 3 Grade (0–10): 7
Course 3 Credit Hours: 3

-----------------------------
Total Credits: 10
Total Grade Points: 80
Your GPA / CGPA = 8
-----------------------------
